                          <button type="submit" formaction="/rifiuta"><i class="fas fa-trash fa-lg"
                              style="color:#adb5bd;"></i></button>
                          </div>
                        </div>
                        </form>
                      </div>
                    </div>
                  </div>
                  <%  }}); %>
                  <% if(counter2==0){  %>
